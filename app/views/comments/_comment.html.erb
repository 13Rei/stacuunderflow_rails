<div <% if comment.isCorrect %>class="answer correct_answer"<% else %> class="answer" <% end %> >
<div class="question_author">
 <%= comment.name %>
</div>
<div class="question_body">
    <%= comment.body %><br>
</div>
<div class="tags">
<%= time_ago_in_words(comment.created_at) %> ago<br>
</div>
    <% if user_signed_in? %>
        <% if comment.name == current_user %>
            <%= link_to 'Delete', [comment.post, comment], method: :delete, :class => 'delete_btn' %>
        <% end %>
        <% if comment.post.user_id == current_user.id %>
            <% if !Comment.find_by(isCorrect: 1, post_id: comment.post) %>
                <%= button_to 'Mark Correct', [comment.post, comment], :method => :put, :class=>'mark_as_correct_btn'%>
            <% end %>
        <% end %><br>
    <% end %>
    <% if comment.isCorrect %>
    <p class="question_author correct_answer">Correct answer</p>
<% end %>
</div>
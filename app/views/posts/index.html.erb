<head>
  <link rel="stylesheet" href="../../assets/stylesheets/index.css">
  <script type="text/javascript" src = "../../assets/froala_editor.pkgd.min.js"></script>
  <%= stylesheet_link_tag    "index", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<div class="spacer"></div>
    <div class="content">
        <div class="sidebar">
          <ul class="sidebar_list">
            <% if user_signed_in? %>
              <li class="ask_a_question"><%= link_to 'Ask a question', new_post_path %></li>
            <% end %>
          </ul>
        </div>
        <div class="middle_content">
            <!--
            <h1 class="page_heading">Some tags</h1>
            <% @posts.tag_counts.each do |tag| %>
              <%= tag.name %>
            <% end %>
            -->
            <h1 class="page_heading">Some questions</h1>
            <% @posts.reverse_each do |post| %>
                <div class="question_container">
                      <% if Comment.find_by(isCorrect: 1, post_id: post.id) %>
                        <div class="inner_question_container answered_question_container">
                      <% else %>
                        <div class="inner_question_container">
                      <% end %>
                          <div class="votes_answers">
                              <p><span class="number"></span> <i>answers:</i> <b><%= post.comments.count %></b></p>
                          </div>
                          <h1 class="question_title">
                              <a href=""><%= link_to post.title, post %></a>
                          </h1>
                      </div>
              </div>
            <% end %>
        </div>
    </div>


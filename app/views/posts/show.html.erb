<head>
  <link rel="stylesheet" href="../../assets/stylesheets/profilepage.css">
  <%= stylesheet_link_tag "profilepage", :media => "all" %>
  <link rel="stylesheet" href="../../assets/stylesheets/admin.css">
  <%= stylesheet_link_tag "admin", :media => "all" %>
</head>
<body>
    <p id="notice"><%= notice %></p>
    <div class="content">
        <div class="spacer"></div>
        <div class="question">
            <h1 class="question_title">
              <%= @post.title %>
            </h1>
            <div class="question_author">
                <%= @post.user.name %>
            </div>
            <div class="question_body">
                  <%= @post.body %>
            </div>
            <div class="tags" style="background-color: gray;">
                <%= @post.tag_list %>
            </div>
            <div class="options">
                <% if current_user == @post.user %>
                    <%= link_to "Delete", @post, method: :delete, data: {confirm: "You sure?"}, class: 'label alert delete_btn' %>                  
                <% end %>
            </div>
        </div>
        <div class="answer_section">
            <div class="answers">
                    <p class="number_of_comments">
                        <%= @post.comments.count %> answers
                    </p>
                    <%= render @post.comments%>
            </div>
            <% if user_signed_in? %>
                <div class="post_an_answer">
                    <%= render 'comments/form' %>
                </div>
            <% end %>
        </div>
    </div>
</body>
</html>

